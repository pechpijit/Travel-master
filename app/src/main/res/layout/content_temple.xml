<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TravelAllActivity"
    tools:showIn="@layout/activity_temple">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:id="@+id/view"
           android:visibility="visible">

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/menu2" />

           <com.daimajia.slider.library.SliderLayout
               android:id="@+id/slider"
               android:layout_width="match_parent"
               android:layout_height="210dp"
               custom:auto_cycle="true"
               custom:indicator_visibility="visible"
               custom:pager_animation="Accordion"
               custom:pager_animation_span="1100" />

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/menu2" />

           <LinearLayout
               android:id="@+id/view_detail"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="@color/colorPrimary">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="รายละเอียด"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="24dp"
                   android:textStyle="bold"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp" />

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/ic_expand_more_white_48dp"
                   android:id="@+id/img_ex1" />
           </LinearLayout>
           <at.blogc.android.views.ExpandableTextView
               android:id="@+id/ex_detail"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text=""
               android:textSize="21dp"
               android:maxLines="0"
               android:ellipsize="end"
               app:animation_duration="1000"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp" />

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/menu2"></FrameLayout>

           <LinearLayout
               android:id="@+id/view_address"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="@color/colorPrimary">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="ที่อยู่"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="24dp"
                   android:textStyle="bold"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp" />

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/ic_expand_more_white_48dp"
                   android:id="@+id/img_ex2" />
           </LinearLayout>
           <at.blogc.android.views.ExpandableTextView
               android:id="@+id/ex_address"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text=""
               android:textSize="21dp"
               android:maxLines="0"
               android:ellipsize="end"
               app:animation_duration="1000"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp" />

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/menu2" />

           <LinearLayout
               android:id="@+id/view_time"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="@color/colorPrimary">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="เวลาทำการ"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="24dp"
                   android:textStyle="bold"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp" />

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/ic_expand_more_white_48dp"
                   android:id="@+id/img_ex4" />
           </LinearLayout>
           <at.blogc.android.views.ExpandableTextView
               android:id="@+id/ex_time"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text=""
               android:textSize="21dp"
               android:maxLines="0"
               android:ellipsize="end"
               app:animation_duration="1000"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp" />

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/menu2" />

           <LinearLayout
               android:id="@+id/view_nearby"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="@color/colorPrimary">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="สถานที่ใกล้เคียง"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:textSize="24dp"
                   android:textStyle="bold"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp" />

               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/ic_expand_more_white_48dp"
                   android:id="@+id/img_ex5" />
           </LinearLayout>
           <at.blogc.android.views.ExpandableTextView
               android:id="@+id/ex_nearby"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:text=""
               android:textSize="21dp"
               android:maxLines="0"
               android:ellipsize="end"
               app:animation_duration="1000"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp" />

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="2dp"
               android:background="@color/menu2" />

           <android.support.v7.widget.AppCompatButton
               android:id="@+id/btn_image"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:padding="12dp"
               android:layout_margin="5dp"
              android:background="@color/colorPrimary"
               android:textSize="24dp"
               android:textStyle="bold"
               android:text="รูปเพิ่มเติม"
               android:textColor="@color/white" />
           <android.support.v7.widget.AppCompatButton
               android:id="@+id/btn_image360"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:padding="12dp"
               android:layout_margin="5dp"
               android:background="@color/colorPrimary"
               android:textSize="24dp"
               android:textStyle="bold"
               android:text="รูป 360"
               android:textColor="@color/white" />
           <android.support.v7.widget.AppCompatButton
               android:id="@+id/btn_search"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:padding="12dp"
               android:layout_margin="5dp"
               android:background="@color/colorPrimary"
               android:textSize="24dp"
               android:textStyle="bold"
               android:text="เส้นทาง"
               android:textColor="@color/white" />
       </LinearLayout>
   </ScrollView>
</FrameLayout>